<?xml version="1.0"?>
<ruleset name="WPPHPMailer">
    <file>./</file>
    <exclude-pattern>/release/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/wordpress/*</exclude-pattern>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show progress and sniff codes in all reports; Show progress of the run -->
    <arg value="sp"/>

    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Install custom rulesets -->
    <config name="installed_paths" value="vendor/wp-coding-standards/wpcs,vendor/automattic/vipwpcs,vendor/itinerisltd/itineris-wp-coding-standards"/>

    <!-- Use Itineris WP Coding Standards -->
    <rule ref="Itineris">
        <exclude name="Squiz.Commenting.FileComment.SpacingAfterOpen"></exclude>
        <exclude name="WordPress.NamingConventions.ValidVariableName.InterpolatedVariableNotSnakeCase"></exclude>
        <exclude name="WordPress.NamingConventions.ValidVariableName.PropertyNotSnakeCase"></exclude>
        <exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase"></exclude>
        <exclude name="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase"></exclude>
    </rule>

    <config name="minimum_supported_wp_version" value="5.2"/>

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array" value="gf-loqate-bank-verification"/>
        </properties>
    </rule>

    <rule ref="Generic.WhiteSpace.ArbitraryParenthesesSpacing">
        <properties>
            <property name="spacing" value="0"/>
        </properties>
    </rule>

    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <!-- Beacuse of the `array_key_first` polyfill for PHP 7.2-->
        <exclude-pattern>/gf-loqate-bank-verification.php</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting.FileComment.MissingPackageTag">
        <exclude-pattern>/gf-loqate-bank-verification.php</exclude-pattern>
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>/src/AddOn.php</exclude-pattern>
    </rule>

    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <exclude-pattern>/src/AddOn.php</exclude-pattern>
    </rule>

    <rule ref="Squiz.Commenting.VariableComment.Missing">
        <exclude-pattern>/src/AddOn.php</exclude-pattern>
    </rule>

    <!--This is because this rule gives internal error Undefined index: parenthesis_owner-->
    <rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
        <exclude-pattern>/src/Plugin.php</exclude-pattern>
        <exclude-pattern>/src/Validator.php</exclude-pattern>
    </rule>
</ruleset>
